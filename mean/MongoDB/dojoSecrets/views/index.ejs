<html>
	<head>
		<meta charset="utf-8">
		<meta name="description" content="johnahnz0rs > coding dojo > mean > express.js > Login + Registration">
		<link rel="stylesheet" href="/bootstrap.css">
		<link rel="shortcut icon" href="/favicon.ico">
		<script src="/jquery.min.js"></script>
		
		<title>Login + Registration</title>
		<style>
			.container { 
				width: 970px; 
				margin: 40px auto !important; 
			}
			.error {
				color: red;
			}
			#login { 
				width: 400px; 
				display: inline-block; 
				border: 1px solid black; 
				vertical-align: top;
				padding: 10px;
				margin-right: 20px;
			}
			#registration { 
				width: 400px; 
				display: inline-block; 
				border: 1px solid black; 
				vertical-align: top; 
				padding: 10px;
			}
			.pull-right {
				float: right !important;
			}
		</style>
	</head>
	<body>
		<div class="container">

			<% if(typeof(error) != 'undefined') { %>
	            <h3 class="error">ERROR: <%= error %></h3>
	        <% } %>

	        <% if(typeof(errors) != 'undefined' ) { %>
	            <% for (var x in errors) { %>
	                <h3 class='error'>ERROR: <%= errors[x].message %></h3>
	            <% } %>
	        <% } %>


			<div id="login">
	            <h1>Login</h1>
	            <form method="POST" action="/login">
	                
	                <table>
	                    <tr>
	                        <td><label for="email">Email: </label></td>
	                        <td><input type="text" name="email"></td>
	                    </tr>
	                    <tr>
	                        <td><label for="password">Password:</label></td>
	                        <td><input type="password" name="password"></td>
	                    </tr>
	                </table>
	                <p class="submit_button">
	                    <input type="submit" value="Login" class="pull-right">
	                </p>
	            </form>
	        </div> <!-- end #login -->

			<div id="registration">
				<h1>Registration</h1>
	            <form method="POST" action="/register">
	                <table>
	                    <tr>
	                        <td><label for="first_name">First Name:</label></td>
	                        <td><input type="text" name="first_name"></td>
	                    </tr>
	                    <tr>
	                        <td><label for="last_name">Last Name:</label></td>
	                        <td><input type="text" name="last_name"></td>
	                    </tr>
	                    <tr>
	                    	<td><label for="birthday">Birthday:</label></td>
	                    	<td><input type="date" name="birthday"></td>
	                    </tr>
	                    <tr>
	                        <td><label for="email">Email:</label></td>
	                        <td><input type="text" name="email"></td>
	                    </tr>
	                    <tr>
	                        <td><label for="password">Password:</label></td>
	                        <td><input type="password" name="password"></td>
	                    </tr>
	                    <tr>
	                        <td><label for="c_password">Confirm PW:</label></td>
	                        <td><input type="password" name="c_password"></td>
	                    </tr>
	                </table>
	                <p class="submit_button">
	                    <input type="submit" value="Register" class="pull-right">
	                </p>
	            </form>
	        </div> <!-- end #registration -->



		</div>
	</body>
</html>