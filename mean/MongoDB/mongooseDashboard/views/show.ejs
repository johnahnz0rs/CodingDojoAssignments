	<body>
		<div class="container">

			<% if (dog) { %>
				<h1>Doggo Details</h1>
				<p>Name: <%= dog.name %></p>
				<p>Age: <%= dog.age %></p>
				<p>Is Good Boy? <% if (dog.good_boy == 'yes') { %>YES! <% } else { %>no :( <% } %></p>
			


				<p><a href="/">Back</a> <a href="/dogs/edit/<%= dog._id %>">Edit Doggo</a> <form method="post" action="/dogs/destroy/<%= dog._id %>"><input type="submit" value="Delete this Doggo"></form></p>
			<% } %>




		</div>
	</body>
