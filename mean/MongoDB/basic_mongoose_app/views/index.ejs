
<html>
	<head>
		<meta charset="utf-8">
		<meta name="description" content="johnahnz0rs > coding dojo > mean > express.js > Basic Mongoose App">
		<link rel="stylesheet" href="bootstrap.css">
		<link rel="shortcut icon" href="favicon.ico">
		<script src="jquery.min.js"></script>
		
		<title>Basic Mongoose App</title>
		<style>
			.container { margin: 40px auto; }
			.users p { margin: 30px auto; }
		</style>
	</head>
	<body>
		<div class="container">
			<div class="form">
				<form action="/users" method="post">
					Name: <input type='text' name='name'><br>
					Age: <input type='text' name='age'><br>
					<input type='submit' value='Submit'>
				</form>
			</div>

			<% if (users) { %>
				<div class='users'>
					<% for (var i = 0; i < users.length; i++) { %>
						<p>Name: <%= users[i].name %>, Age: <%= users[i].age %></p>
					<% } %>
				</div>
			<% } %>
		</div>
	</body>
</html>